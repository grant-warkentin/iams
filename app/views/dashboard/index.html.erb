<h1>Dashboard</h1>

<h2 class="mt-5">Device Usage</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Assigned</th>
      <th>Available</th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= Device.where(Name: device.name).count %></td>
        <td><%= device %></td>
        <td><%= device %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="mt-5">Software Compliance</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>License Count</th>
      <th>Employee Count</th>
      <th>Compliant?</th>
    </tr>
  </thead>
  <tbody>
    <% @devices.each do |software| %>
      <tr>
        <td><%= software.name %></td>
      </tr>

    <% end %>
  </tbody>
</table>
