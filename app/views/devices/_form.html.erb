<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :manufacturer, label_method: :name, required: true %>
    <%= f.association :category, lable_method: :name, required: true %>
    <%= f.association :employee, label_method: :full_name %>
  </div>

  <div class="form-actions">
    <input type="submit" name="commit" value="Update Device" class="btn btn-primary" data-disable-with="Update Device">
  </div>

<% end %>
