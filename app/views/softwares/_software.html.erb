<div class="card my-3 p-3">
  <div id="<%= dom_id software %>">
    <p>
    <strong>Name:</strong>
    <%= software.name %>
    </p>

    <p>
    <strong>License count:</strong>
    <%= software.license_count %>
    </p>

    <p>
    <strong>Assigned Employees:</strong>
    <ul>
      <% software.employees.each do |employee| %>
        <li> <a href="<%= employee_path(employee.id) %>"><%=employee.full_name%></a>
      <%end%>
    </ul>
    <%= link_to "Show this software", software %>
    </p>
  </div>
</div>
