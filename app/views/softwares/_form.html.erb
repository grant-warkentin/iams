
<%= simple_form_for(@software) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :license_count %>
    <%= f.association :employees, as: :check_boxes, :label_method => :first_name %>
  </div>


  <div class="form-actions">
    <input type="submit" name="commit" value="Update Software" class="btn btn-primary" data-disable-with="Update Software">
  </div>
<% end %>
